<%- include("partials/header") -%>
<title>User Profile</title>
</head>

<body>


    <%- include("partials/loginNav.ejs") -%>

    <div class="d-flex justify-content-center align-items-center login-container">
        <form class="login-form text-center" action="/userprofileUpdate?_method=PUT" method="POST">
            <div class="form-group">
                <h5>Email</h5>
                <input type="email" name="detail[email]" class="form-control rounded-pill form-control-lg" value="<%= user.detail.email %>"
                    required>
            </div>
            <div class="form-group">
                <h5>First Name</h5>
                <input type="text" name="detail[firstName]" class="form-control rounded-pill form-control-lg"
                value="<%= user.detail.firstName %>" required>
            </div>
            <div class="form-group">
                <h5>Last Name</h5>
                <input type="text" name="detail[lastName]" class="form-control rounded-pill form-control-lg"
                    value="<%= user.detail.lastName %>" required>
            </div>
            <div class="form-group">
                <h5>Age</h5>
                <input type="text" name="detail[age]" class="form-control rounded-pill form-control-lg" value="<%= user.detail.age %>" required>
            </div>
            <div class="form-group">
                <select name="detail[education]" id="" required>
                    <option value="g-8">Grade-8</option>
                    <option value="g-9">Grade-9</option>
                    <option value="g-10">Grade-10</option>
                    <option value="g-11">Grade-11</option>
                    <option value="g-12">Grade-12</option>
                    <option value="post_secondary">Post Secondary</option>
                    <option value="undergraduate">Undergraduate</option>
                    <option value="master">Master</option>
                    <option value="doctorate">Doctorate</option>
                </select>
            </div>
            <div class="form-group">
                <select name="detail[major]" id="" required>
                    <option value="art">Art</option>
                    <option value="english">English</option>
                    <option value="math">Math</option>
                    <option value="science">Science</option>
                    <option value="socialstudies">Social Studies</option>

                </select>
            </div>
            <div class="form-group">
                <input type="radio" name="type" class="rounded-pill radio-inline" value="tutor" required>
                <label for="tutor">Tutor</label>
                <input type="radio" name="type" class="rounded-pill radio-inline" value="student" required>
                <label for="type">Student</label>
            </div>
            <button type="submit"
                class="btn mt-4 rounded-pill btn-lg btn-custom btn-block text-uppercase">Update</button>
        </form>
    </div>



    <form action="/destoryprofile?_method=DELETE" method="POST">
        <button>Delete</button>
    </form>
<%- include("partials/footer") -%>