<%- include("partials/header") -%>
    <title>User Profile | Tutors4Zoomers</title>
</head>

<body>

    <%- include("partials/loginNav.ejs") -%>

    <div class="container">

        <section class="hero is-info">
            <div class="hero-body">
                <h1 class="title">Profile</h1>
                <h2 class="subtitle">Fill out the fields below to update your profile.</h2>
            </div>
        </section>
        <br />

        <div class="block">
            <form class="box" action="/userprofileUpdate?_method=PUT" method="POST">
                <div class="field">
                    <label class="label">Email</label>
                    <input type="email" name="detail[email]" class="input" value="<%= user.detail.email %>" required>
                </div>

                <div class="field">
                    <label class="label">First Name</label>
                    <input type="text" name="detail[firstName]" class="input" value="<%= user.detail.firstName %>" required>
                </div>

                <div class="field">
                    <label class="label">Last Name</label>
                    <input type="text" name="detail[lastName]" class="input" value="<%= user.detail.lastName %>" required>
                </div>

                <div class="field">
                    <label class="label">Age</label>
                    <input type="text" name="detail[age]" class="input" value="<%= user.detail.age %>" required>
                </div>

                <div class="field">
                    <label class="label">Level of Education</label>
                    <p class="control">
                        <span class="select">
                        <select name="detail[education]">
                            <option hidden disabled selected value> -- select an option -- </option>
                            <option value="g-8">Grade 8</option>
                            <option value="g-9">Grade 9</option>
                            <option value="g-10">Grade 10</option>
                            <option value="g-11">Grade 11</option>
                            <option value="g-12">Grade 12</option>
                            <option value="post_secondary">Post Secondary</option>
                            <option value="undergraduate">Undergraduate</option>
                            <option value="master">Master</option>
                            <option value="doctorate">Doctorate</option>
                        </select>
                        </span>
                    </p>
                </div>

                <div class="field">
                    <label class="label">Level of Education</label>
                    <p class="control">
                        <span class="select">
                        <select name="detail[major]">
                            <option hidden disabled selected value> -- select an option -- </option>
                            <option value="art">Art</option>
                            <option value="english">English</option>
                            <option value="math">Math</option>
                            <option value="science">Science</option>
                            <option value="socialstudies">Social Studies</option>
                        </select>
                        </span>
                    </p>
                </div>

                <div class="control">
                    <label class="radio">
                      <input type="radio" name="type" value="tutor" required>
                      Tutor
                    </label>
                    <label class="radio">
                      <input type="radio" name="type" value="student" required>
                      Student
                    </label>
                </div>
                <br />

                <button type="submit"
                class="button is-success">Update</button>
            </form>

            <form action="/destoryprofile?_method=DELETE" method="POST">
                <button class="button is-danger is-small">Delete My Account</button>
            </form>
        </div>
    </div>

<%- include("partials/footer") -%>